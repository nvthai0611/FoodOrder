<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
    const adminPanelBrand = document.querySelector('.navbar-brand[href="/admin"]');

    function setActiveLink(href) {
      navLinks.forEach(nav => nav.classList.remove('active')); // Remove active from all
      const targetLink = document.querySelector(`.navbar-nav .nav-link[href="${href}"]`);
      if (targetLink) {
        targetLink.classList.add('active'); // Add active to the specific link
        localStorage.setItem('activeLink', href); // Store the active link
      }
    }

    // Event listener for navigation links
    navLinks.forEach(link => {
      link.addEventListener('click', function(event) {
        // Prevent default only if you're handling navigation purely client-side
        // event.preventDefault(); // Uncomment if you are using a SPA framework and don't want a full page reload

        setActiveLink(this.getAttribute('href'));
      });
    });

    // Event listener for the "Admin Panel" brand link
    if (adminPanelBrand) {
      adminPanelBrand.addEventListener('click', function(event) {
        // event.preventDefault(); // Uncomment if you are using a SPA framework
        setActiveLink('/admin'); // Explicitly activate User Management (which has href="/admin")
      });
    }

    // Check localStorage on page load to set the active link
    const storedActiveLink = localStorage.getItem('activeLink');
    const currentPath = window.location.pathname;

    if (storedActiveLink) {
      setActiveLink(storedActiveLink);
    } else if (currentPath === '/admin' || currentPath === '/admin/') {
      // If no stored link, but current page is admin root, activate User Management
      setActiveLink('/admin');
    }
  });
</script>
</body>
</html>