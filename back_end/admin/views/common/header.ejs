            console.error("L·ªñI: Bootstrap JavaScript kh√¥ng t·∫£i ƒë∆∞·ª£c! Dropdown s·∫Ω kh√¥ng ho·∫°t ƒë·ªông.");
        } else {
            console.log("Bootstrap JavaScript ƒë√£ t·∫£i th√†nh c√¥ng.");

            // C·ªë g·∫Øng kh·ªüi t·∫°o Dropdown th·ªß c√¥ng ngay khi DOM v√† Bootstrap s·∫µn s√†ng
            const notificationsDropdownElement = document.getElementById('navbarDropdownNotifications');
            if (notificationsDropdownElement) {
