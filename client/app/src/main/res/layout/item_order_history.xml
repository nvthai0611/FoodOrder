<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_item_background"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvOrderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn: #123456"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02/07/2025 - 14:45"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã giao"
        android:textColor="#4CAF50"
        android:textStyle="italic"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/layoutPreviewProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imgProduct1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_food" />

        <ImageView
            android:id="@+id/imgProduct2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_food" />

        <TextView
            android:id="@+id/tvMoreProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 món"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 215.000đ"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnViewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chi tiết"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/purple"
        android:textColor="#FFFFFF" />
</LinearLayout>
