<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:padding="@dimen/padding_screen"
    android:layout_marginTop="@dimen/margin_top_large">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:padding="@dimen/padding_medium"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/food_detail"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:textColor="@color/color_text_primary" />

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_favorite_border_24"
                android:contentDescription="@string/favorite" />
        </LinearLayout>

        <!-- Food Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/food_image_height">
            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:background="@color/color_white">

            <!-- Category & Time -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingVertical="4dp"
                    android:text="@string/category_banh_mi"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/color_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/preparation_time"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/color_text_secondary" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bánh Mì Thịt Nướng"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:textColor="@color/color_text_primary"
                android:layout_marginTop="@dimen/margin_small" />

            <!-- Rating -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="4.8"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/color_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="(124 đánh giá) • 320 kcal"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/color_text_secondary" />
            </LinearLayout>

            <!-- Prices -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35.000đ"
                    android:textSize="@dimen/text_size_title"
                    android:textColor="@color/color_price"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="45.000đ"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/color_text_disabled" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_section_title"
                android:layout_marginTop="@dimen/margin_large" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/color_text_body"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:text="Mô tả món ăn..." />

            <!-- Ingredients -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_section_title"
                android:layout_marginTop="@dimen/margin_large" />

            <LinearLayout
                android:id="@+id/ingredientContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" />

            <!-- Quantity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/quantity"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:textColor="@color/color_text_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnDecrease"
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:background="@drawable/decrease"
                        android:src="@drawable/decrease"
                        android:contentDescription="@string/btn_decrease" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnIncrease"
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:background="@drawable/increase"
                        android:src="@drawable/increase"
                        android:contentDescription="@string/btn_increase" />
                </LinearLayout>
            </LinearLayout>

            <!-- Add to Cart -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_to_cart"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/color_price"
                android:layout_marginTop="@dimen/margin_large" />
        </LinearLayout>

        <!-- Divider & Reviews -->
        <View style="@style/DividerLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reviews"
            android:textSize="@dimen/text_size_section_title"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:layout_marginBottom="@dimen/margin_small" />

        <LinearLayout
            android:id="@+id/reviewContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium" />

        <View style="@style/DividerLine" />

        <!-- Related -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/related_items"
            android:textSize="@dimen/text_size_section_title"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:layout_marginBottom="@dimen/margin_small" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRelatedItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:overScrollMode="never" />
        <!-- Feedback -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textSize="@dimen/text_size_section_title"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:layout_marginBottom="@dimen/margin_small" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</ScrollView>
